      "category": "HTTP & Webhooks",
      "popularity_score": 100,
      "parameters": [
        {
          "name": "url",
          "type": "text",
          "label": "URL",
          "required": true,
          "description": "The URL to send the request to"
        },
        {
          "name": "method",
          "type": "select",
          "label": "Method",
          "required": true,
          "description": "HTTP method",
          "default_value": "GET",
          "options": [
            {"label": "GET", "value": "GET"},
            {"label": "POST", "value": "POST"},
            {"label": "PUT", "value": "PUT"},
            {"label": "PATCH", "value": "PATCH"},
            {"label": "DELETE", "value": "DELETE"}
          ]
        },
        {
          "name": "headers",
          "type": "array",
          "label": "Headers",
          "required": false,
          "description": "Request headers"
        },
        {
          "name": "body",
          "type": "text",
          "label": "Body",
          "required": false,
          "description": "Request body"
        }
      ],
      "example_config": {
        "url": "https://api.example.com/data",
        "method": "GET",
        "headers": [],
        "body": ""
      }
    },
