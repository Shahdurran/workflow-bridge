      "app": "Google Sheets",
      "type": "action",
      "description": "Adds a new row to a Google Sheets spreadsheet",
      "category": "Data & Storage",
      "popularity_score": 90,
      "parameters": [
        {
          "name": "spreadsheetId",
          "type": "text",
          "label": "Spreadsheet ID",
          "required": true,
          "description": "The ID of the spreadsheet"
        },
        {
          "name": "sheetName",
          "type": "text",
          "label": "Sheet Name",
          "required": true,
          "description": "Name of the sheet"
        },
        {
          "name": "values",
          "type": "array",
          "label": "Values",
          "required": true,
          "description": "Array of values to add as a new row"
        }
      ],
      "example_config": {
        "spreadsheetId": "1BxiMVs0XRA5nFMdKvBdBZjgmUUqptlbs74OgvE2upms",
