      "name": "Watch Rows",
      "app": "Google Sheets",
      "type": "trigger",
      "description": "Triggers when a row is added or updated",
      "category": "Data & Storage",
      "popularity_score": 90,
      "parameters": [
        {
          "name": "spreadsheetId",
          "type": "text",
          "label": "Spreadsheet ID",
          "required": true,
          "description": "The ID of the Google Sheets spreadsheet"
        },
        {
          "name": "sheetName",
          "type": "text",
          "label": "Sheet Name",
          "required": true,
          "description": "Name of the sheet to watch"
        },
        {
          "name": "limit",
          "type": "number",
          "label": "Limit",
          "required": false,
          "description": "Maximum number of rows to return",
          "default_value": 10
        }
      ],
      "example_config": {
        "spreadsheetId": "1BxiMVs0XRA5nFMdKvBdBZjgmUUqptlbs74OgvE2upms",
        "sheetName": "Sheet1",
        "limit": 10
      }
    },
    {
      "id": "google-sheets:addRow",
