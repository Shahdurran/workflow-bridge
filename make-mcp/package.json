{
  "name": "make-mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol server for Make.com workflow automation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "make-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -w",
    "start": "node dist/index.js",
    "start:http": "MCP_MODE=http node dist/index.js",
    "scrape": "node dist/scrapers/make-docs-scraper.js",
    "rebuild": "node dist/scripts/rebuild-database.js",
    "import-modules": "tsc && node dist/scripts/import-modules.js",
    "test": "vitest",
    "test:watch": "vitest watch"
  },
  "keywords": [
    "make",
    "make.com",
    "mcp",
    "model-context-protocol",
    "workflow",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.1",
    "axios": "^1.11.0",
    "better-sqlite3": "^12.4.1",
    "cheerio": "^1.0.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.1.5",
    "lru-cache": "^11.2.1",
    "uuid": "^10.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.3",
    "@types/node": "^22.15.30",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
